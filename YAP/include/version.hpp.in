#pragma once

#define __YAP_VERSION__ "@PROJECT_VERSION@"
#define __YAP_VERSION_MASK_DEBUG__ 0xFF000000
#define __YAP_VERSION_MASK_MAJOR__ 0x000000FF
#define __YAP_VERSION_MASK_MINOR__ 0x0000FF00
#define __YAP_VERSION_MASK_PATCH__ 0x00FF0000
#define __YAP_CONFIG_VERSION__ 0 // Only changes when .yaproj file format changes
#ifdef _DEBUG
#define __YAP_BUILD__ "DEBUG"
#define DEBUG_ONLY(x) x
#define RELEASE_ONLY(x)
#define __YAP_VERSION_NUM__ (0xFF000000 | (@PROJECT_VERSION_MAJOR@ << 16) | (@PROJECT_VERSION_MINOR@ << 16) | @PROJECT_VERSION_PATCH@)
#else
#define __YAP_BUILD__ "RELEASE"
#define DEBUG_ONLY(x)
#define RELEASE_ONLY(x) x
#define __YAP_VERSION_NUM__ ((@PROJECT_VERSION_MAJOR@ << 16) | (@PROJECT_VERSION_MINOR@ << 16) | @PROJECT_VERSION_PATCH@)
#endif